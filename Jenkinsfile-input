pipeline {
    agent any
    environment {
        DEBUG = 'true'
    }
    stages {
        stage('Example') {
            input {
                message "Should we continue?"
                ok "Yes, we should."
                submitter "alice,bob"
                parameters {
                    string(name: 'PERSON', defaultValue: 'VENKAT', description: 'Who should I say hello to?')
                }
            }
            steps {
                echo "Hello, ${PERSON}, nice to meet you."
            }
        }
        stage('Test') {
            steps {
                sh 'echo This is test'
                sh 'env'
            }
        }
        stage('When') {
            when {
                branch 'main'
            }
            steps {
                echo 'Deploying in main'
            }
        }
    }
}