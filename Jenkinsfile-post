pipeline {
    agent any 
    stages {
        stage('Build') { 
            steps {
                echo "Build Stage"
            }
        }
        stage('Test') { 
            steps {
                echo "Test Stage"
            }
        }
        stage('Deploy') { 
            steps {
               echo "Deploy Stage" 
               echo "Deploy Stage" 
            }
        }
    }
    post { 
        always { 
            echo 'Always I will always say Hello again!'
        }
        success { 
            echo 'Success... I will always say Hello again!'
        }
        failure{
            echo 'Failure... I will always say Hello again!'
        }

    }
}